set $fm HDMI-0
set $sm HDMI-1-1

# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"
set $ws11 "11"
set $ws12 "12"
set $ws13 "13"
set $ws14 "14"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9

# set different workspace to different monitors

workspace 1 output $fm
workspace 2 output $fm
workspace 3 output $fm
workspace 4 output $fm
workspace 5 output $fm
workspace 6 output $fm
workspace 7 output $fm
workspace 8 output $fm
workspace 9 output $fm
workspace 10 output $sm
workspace 11 output $sm
workspace 12 output $sm
workspace 13 output $sm
workspace 14 output $sm

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9

bindsym $mod+C mode "Monitor"
mode "Monitor"{

	bindsym $mod+1 workspace number $ws10
	bindsym $mod+2 workspace number $ws11
	bindsym $mod+3 workspace number $ws12
	bindsym $mod+4 workspace number $ws13
	bindsym $mod+5 workspace number $ws14
	
	bindsym $mod+Shift+1 move container to workspace number $ws10
	bindsym $mod+Shift+2 move container to workspace number $ws11
	bindsym $mod+Shift+3 move container to workspace number $ws12
	bindsym $mod+Shift+4 move container to workspace number $ws13
	bindsym $mod+Shift+5 move container to workspace number $ws14

	bindsym $mod+C mode "default"
}
