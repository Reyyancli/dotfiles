# Swap containers
bindsym $mod+S mark --add "swapee"; mode "swap"; exec notify-send -a "Swap" -u low "Marked $(xprop -id "$(xdotool getwindowfocus)" WM_CLASS | sed -E 's/.*"([^"]+)".*/\1/')"
mode "swap" {
	bindsym $mod+S swap container with mark "swapee"; unmark "swapee"; mode "default"
	bindsym $mod+space swap container with mark "swapee"; unmark "swapee"; mode "default"
	bindsym Escape mode "default"; exec notify-send -a "Swap" -u low "Exiting Swap Mode" 

	set $fm HDMI-0
	set $sm HDMI-1-2

	# We use variables to avoid repeating the names in multiple places.
	set $ws1 "1"
	set $ws2 "2"
	set $ws3 "3"
	set $ws4 "4"
	set $ws5 "5"
	set $ws6 "6"
	set $ws7 "7"
	set $ws8 "8"
	set $ws9 "9"
	set $ws10 "10"
	set $ws11 "11"
	set $ws12 "12"
	set $ws13 "13"
	set $ws14 "14"

	# switch to workspace
	bindsym $mod+1 workspace number $ws1
	bindsym $mod+2 workspace number $ws2
	bindsym $mod+3 workspace number $ws3
	bindsym $mod+4 workspace number $ws4
	bindsym $mod+5 workspace number $ws5
	bindsym $mod+6 workspace number $ws6
	bindsym $mod+7 workspace number $ws7
	bindsym $mod+8 workspace number $ws8
	bindsym $mod+9 workspace number $ws9
	bindsym $mod+Mod1+1 workspace number $ws10
	bindsym $mod+Mod1+2 workspace number $ws11
	bindsym $mod+Mod1+3 workspace number $ws12
	bindsym $mod+Mod1+4 workspace number $ws13
	bindsym $mod+Mod1+5 workspace number $ws14

	# change focus
	bindsym $mod+j focus left
	bindsym $mod+k focus down
	bindsym $mod+l focus up
	bindsym $mod+semicolon focus right

	bindsym $mod+Left focus left
	bindsym $mod+Down focus down
	bindsym $mod+Up focus up
	bindsym $mod+Right focus right
}

