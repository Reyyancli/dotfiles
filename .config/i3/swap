# Swap containers
bindsym $mod+p mark --add "swapee"; mode "swapper"; exec notify-send -a "i3 message" -u low "Entered Swap"
mode "swapper" {
	bindsym $mod+p swap container with mark "swapee"; unmark "swapee"; mode "default"; exec notify-send -a "i3 message" -u low "Swapped!"
	bindsym Escape mode "default"; exec notify-send -a "i3 message" -u low "Exited Swap" 

	set $fm HDMI-0
	set $sm HDMI-1-2

	# We use variables to avoid repeating the names in multiple places.
	set $ws1 "1"
	set $ws2 "2"
	set $ws3 "3"
	set $ws4 "4"
	set $ws5 "5"
	set $ws6 "6"
	set $ws7 "7"
	set $ws8 "8"
	set $ws9 "9"
	set $ws10 "10"
	set $ws11 "11"
	set $ws12 "12"
	set $ws13 "13"
	set $ws14 "14"
	set $ws15 "15"
	set $ws16 "16"
	set $ws17 "17"
	set $ws18 "18"
	set $ws19 "19"

	# switch to workspace
	bindsym $mod+1 workspace number $ws1
	bindsym $mod+2 workspace number $ws2
	bindsym $mod+3 workspace number $ws3
	bindsym $mod+4 workspace number $ws4
	bindsym $mod+5 workspace number $ws5
	bindsym $mod+6 workspace number $ws6
	bindsym $mod+7 workspace number $ws7
	bindsym $mod+8 workspace number $ws8
	bindsym $mod+9 workspace number $ws9
	bindsym $mod+Mod1+1 workspace number $ws10
	bindsym $mod+Mod1+2 workspace number $ws11
	bindsym $mod+Mod1+3 workspace number $ws12
	bindsym $mod+Mod1+4 workspace number $ws13
	bindsym $mod+Mod1+5 workspace number $ws14
	bindsym $mod+Mod1+6 workspace number $ws15
	bindsym $mod+Mod1+7 workspace number $ws16
	bindsym $mod+Mod1+8 workspace number $ws17
	bindsym $mod+Mod1+9 workspace number $ws18

	# change focus
	bindsym $mod+j focus left
	bindsym $mod+k focus down
	bindsym $mod+l focus up
	bindsym $mod+semicolon focus right

	bindsym $mod+Left focus left
	bindsym $mod+Down focus down
	bindsym $mod+Up focus up
	bindsym $mod+Right focus right
}

